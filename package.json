{
  "name": "liberchat",
  "version": "1.0.0",
  "description": "Liberchat Desktop App",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder"
  },
  "build": {
    "appId": "com.liberchat.desktop",
    "productName": "Liberchat",
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "assets/icon.ico",
      "artifactName": "${productName}-Setup-${version}.${ext}"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "deb",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "rpm",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "snap",
          "arch": [
            "x64"
          ]
        }
      ],
      "category": "Network",
      "icon": "assets/icon.png",
      "artifactName": "${productName}-${version}-${os}.${ext}",
      "maintainer": "Liberchat Team <contact@liberchat.org>"
    },
    "nsis": {
      "oneClick": true,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "deleteAppDataOnUninstall": true
    },
    "files": [
      "**/*"
    ],
    "asar": true
  },
  "author": {
    "name": "Liberchat Team",
    "email": "contact@liberchat.org"
  },
  "homepage": "https://github.com/Liberchat/Liberchat",
  "devDependencies": {
    "electron": "^22.3.27",
    "electron-builder": "^23.6.0"
  }
}
